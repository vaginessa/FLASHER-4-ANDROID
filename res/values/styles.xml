<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@*android:color/accent_device_default_light</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="cardViewStyle">@style/CardView.Light</item>
        <!--Preferences-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:activatedBackgroundIndicator">?android:attr/selectableItemBackground</item>
        <!--Dialogs-->
        <item name="md_dark_theme">false</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@*android:color/accent_device_default_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="cardViewStyle">@style/CardView.Dark</item>
        <!--Preferences-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:activatedBackgroundIndicator">?android:attr/selectableItemBackground</item>
        <!--Dialogs-->
        <item name="md_dark_theme">true</item>
    </style>

    <style name="AppTheme.Black" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@*android:color/accent_device_default_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="cardViewStyle">@style/CardView.Black</item>
        <!--Preferences-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:activatedBackgroundIndicator">?android:attr/selectableItemBackground</item>
        <!--Dialogs-->
        <item name="md_dark_theme">true</item>
        <!--<item name="md_background_color">@android:color/black</item>-->
    </style>

    <style name="AppTheme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Fab">
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">@dimen/fab_elevation</item>
        <item name="pressedTranslationZ">@dimen/fab_elevation_pressed</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="backgroundTint">?android:colorAccent</item>
        <item name="android:tint">@android:color/white</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="CardView.Black">
        <item name="cardBackgroundColor">@android:color/black</item>
    </style>

    <style name="Button">
        <item name="android:backgroundTint">?android:colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>