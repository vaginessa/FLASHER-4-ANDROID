<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@*android:color/accent_device_default_light</item>
        <item name="colorPrimaryDark">@*android:color/accent_device_default_light</item>
        <item name="colorAccent">@*android:color/accent_device_default_light</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialog.Light</item>
        <!--Dialogs-->
        <item name="md_corner_radius">@dimen/margin_8</item>
        <item name="md_color_content">?android:attr/textColorSecondary</item>
        <!-- Overlays -->
        <item name="navigation_color_selected">@*android:color/accent_device_default_light</item>
    </style>

    <style name="Base.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@*android:color/accent_device_default_dark</item>
        <item name="colorPrimaryDark">@*android:color/accent_device_default_dark</item>
        <item name="colorAccent">@*android:color/accent_device_default_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialog.Dark</item>
        <!--Dialogs-->
        <item name="md_corner_radius">@dimen/margin_8</item>
        <item name="md_color_content">?android:attr/textColorSecondary</item>
        <!-- Overlays -->
        <item name="navigation_color_selected">@*android:color/accent_device_default_dark</item>
    </style>

    <style name="Base.AppTheme.Light" parent="Base.Light">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="materialCardViewStyle">@style/CardView.Light</item>
        <!-- Overlays -->
        <item name="progress_background_color">@color/white_transparent</item>
    </style>

    <style name="Base.AppTheme.Dark" parent="Base.Dark">
        <item name="materialCardViewStyle">@style/CardView.Dark</item>
        <!-- Overlays -->
        <item name="progress_background_color">@color/dark_transparent</item>
    </style>

    <style name="Base.AppTheme.Black" parent="Base.Dark">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="materialCardViewStyle">@style/CardView.Black</item>
        <!-- Overlays -->
        <item name="progress_background_color">@color/black_transparent</item>
    </style>

    <style name="Base.AppTheme.Oss" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/pixel</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.Light" parent="Base.AppTheme.Light" />

    <style name="AppTheme.Dark" parent="Base.AppTheme.Dark" />

    <style name="AppTheme.Black" parent="Base.AppTheme.Black" />

    <style name="AppTheme.Oss" parent="Base.AppTheme.Oss" />

    <style name="AppTheme.Light.Pixel" parent="AppTheme.Light">
        <item name="colorPrimary">@color/pixel</item>
        <item name="colorPrimaryDark">@color/pixel</item>
        <item name="colorAccent">@color/pixel</item>
        <item name="navigation_color_selected">@color/pixel</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialog.Light.Pixel</item>
    </style>

    <style name="AppTheme.Dark.Pixel" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/pixel</item>
        <item name="colorPrimaryDark">@color/pixel</item>
        <item name="colorAccent">@color/pixel</item>
        <item name="navigation_color_selected">@color/pixel</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialog.Dark.Pixel</item>
    </style>

    <style name="AppTheme.Black.Pixel" parent="AppTheme.Black">
        <item name="colorPrimary">@color/pixel</item>
        <item name="colorPrimaryDark">@color/pixel</item>
        <item name="colorAccent">@color/pixel</item>
        <item name="navigation_color_selected">@color/pixel</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialog.Dark.Pixel</item>
    </style>

    <style name="AppTheme.Transparent.Light" parent="AppTheme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Transparent.Dark" parent="AppTheme.Dark">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Transparent.Light.Pixel" parent="AppTheme.Light.Pixel">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Transparent.Dark.Pixel" parent="AppTheme.Dark.Pixel">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="CardView.Black">
        <item name="cardBackgroundColor">@android:color/black</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="Base.BottomSheetDialog.Light" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="Base.BottomSheetDialog.Dark" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialog.Light" parent="Base.BottomSheetDialog.Light" />

    <style name="BottomSheetDialog.Dark" parent="Base.BottomSheetDialog.Dark" />

    <style name="TimePickerDialog.Light" parent="@style/Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="colorAccent">@*android:color/accent_device_default_light</item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/Widget.MaterialComponents.Button.TextButton.Dialog
        </item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/Widget.MaterialComponents.Button.TextButton.Dialog
        </item>
    </style>

    <style name="TimePickerDialog.Dark" parent="@style/Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="colorAccent">@*android:color/accent_device_default_dark</item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/Widget.MaterialComponents.Button.TextButton.Dialog
        </item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/Widget.MaterialComponents.Button.TextButton.Dialog
        </item>
    </style>

    <style name="TimePickerDialog.Light.Pixel" parent="TimePickerDialog.Light">
        <item name="colorAccent">@color/pixel</item>
    </style>

    <style name="TimePickerDialog.Dark.Pixel" parent="TimePickerDialog.Dark">
        <item name="colorAccent">@color/pixel</item>
    </style>

</resources>