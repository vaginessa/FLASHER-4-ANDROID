<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.andrognito.patternlockview.PatternLockView
        android:id="@+id/pattern_lock_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:paddingStart="@dimen/margin_24"
        android:paddingEnd="@dimen/margin_24"
        app:aspectRatio="square"
        app:aspectRatioEnabled="true"
        app:correctStateColor="?attr/colorAccent"
        app:dotAnimationDuration="200"
        app:dotNormalSize="@dimen/margin_16"
        app:dotSelectedSize="@dimen/margin_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:normalStateColor="?android:attr/textColorTertiary"
        app:pathEndAnimationDuration="100"
        app:pathWidth="@dimen/margin_4" />

</android.support.constraint.ConstraintLayout>